@page
@model ProyectoMSD.Pages.RegistrarModel

@{
    ViewData["Title"] = "Registro - MySmartDevice";
    ViewData["ShowNavbar"] = false;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #D2EFFE 0%, #D2D9FE 100%);
        --card-shadow: 0 8px 32px rgba(0,0,0,0.12);
        --hover-shadow: 0 12px 40px rgba(0,0,0,0.18);
        --support-green: #7fb069;
        --support-blue: #258cfb;
    }

    body {
        background: var(--primary-gradient);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
    }

    .btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
        box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #258cfb;
    }

    .form-floating > .form-control-plaintext::placeholder, .form-floating > .form-control::placeholder {
        color: var(--bs-secondary-color);
        text-align: end;
    }

    .form-floating > .form-control-plaintext:focus::placeholder, .form-floating > .form-control:focus::placeholder {
        text-align: start;
    }

    .register-header {
        background: white;
        padding: 3rem 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

        .register-header::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, rgba(37, 140, 251, 0.1) 0%, transparent 70%);
        }

    .brand-section {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--card-shadow);
        border-left: 5px solid var(--support-blue);
        text-align: center;
    }

    .brand-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, var(--support-blue) 0%, #1e7ce8 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        font-size: 2.5rem;
        color: white;
        box-shadow: 0 4px 20px rgba(37, 140, 251, 0.3);
    }

    .brand-text {
        font-size: 1.8rem;
        font-weight: 300;
        margin: 0;
        color: var(--support-blue);
        position: relative;
        z-index: 2;
    }

        .brand-text .smart {
            color: #1e7ce8;
            font-weight: 600;
        }

    .form-section {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: var(--card-shadow);
        margin-bottom: 2rem;
    }

    .form-header {
        background: #f8f9fa;
        padding: 1.5rem 2rem;
        border-bottom: 1px solid #e9ecef;
    }

    .form-body {
        padding: 2rem;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #495057;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #e9ecef;
        display: flex;
        align-items: center;
    }

    .form-floating {
        margin-bottom: 1.5rem;
    }

    .form-control, .form-select {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 1rem 0.75rem;
        font-size: 1rem;
        background: rgba(255,255,255,0.8);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--support-blue);
            background: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(37, 140, 251, 0.2);
        }

    .form-floating label {
        color: #6c757d;
        font-weight: 500;
    }

    .btn-register {
        background: linear-gradient(135deg, var(--support-blue) 0%, #1e7ce8 100%);
        border: none;
        border-radius: 25px;
        padding: 12px 2rem;
        font-weight: 600;
        color: white;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        width: 100%;
    }

        .btn-register:hover {
            background: linear-gradient(135deg, #1e7ce8 0%, #1a6bc4 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(37, 140, 251, 0.4);
        }

    .login-link {
        color: var(--support-blue);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .login-link:hover {
            color: #1e7ce8;
            text-decoration: underline;
        }

    .alert-danger {
        background: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.2);
        color: #721c24;
        border-radius: 12px;
        backdrop-filter: blur(10px);
        margin-bottom: 1.5rem;
    }

    .text-danger {
        color: #dc3545 !important;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .content-badge {
        background: rgba(255,255,255,0.9);
        color: #6c757d;
        border: 1px solid rgba(255,255,255,0.3);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
    }
</style>

<div class="container-fluid px-4 py-4">

    <!-- Header de Registro -->
    <div class="register-header text-center">
        <h1 class="display-4 fw-bold mb-3">
            <i class="fas fa-user-plus me-3 text-primary"></i>REGISTRO
        </h1>
        <p class="lead text-muted mb-0">Únete a la comunidad inteligente de MySmartDevice</p>
    </div>

    <!-- Banner de Marca -->
    <div class="brand-section">
        <div class="brand-icon">
            <i class="fas fa-user-plus"></i>
        </div>
        <h2 class="brand-text">My<span class="smart">Smart</span>Device</h2>
        <p class="text-muted mt-2 mb-0">Crea tu cuenta y controla tu hogar inteligente</p>
    </div>

    <!-- Formulario de Registro -->
    <div class="form-section">
        <div class="form-header d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1 fw-bold">
                    <i class="fas fa-edit me-2"></i>Información de Registro
                </h4>
                <p class="text-muted mb-0">Completa todos los campos para crear tu cuenta</p>
            </div>
            <span class="badge content-badge">Nuevo Usuario</span>
        </div>

        <div class="form-body">
            <!-- MOSTRAR ERRORES DE VALIDACIÓN -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <!-- FORMULARIO -->
            <form method="post">
                <!-- Información Personal -->
                <div class="section-title">
                    <i class="fas fa-user me-2 text-primary"></i>Información Personal
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Usuario.Nombre" class="form-control" placeholder="Nombre">
                            <label asp-for="Usuario.Nombre"><i class="fas fa-user me-2"></i>Nombre Completo</label>
                            <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Usuario.Correo" type="email" class="form-control" placeholder="Correo">
                            <label asp-for="Usuario.Correo"><i class="fas fa-envelope me-2"></i>Correo Electrónico</label>
                            <span asp-validation-for="Usuario.Correo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Usuario.Telefono" type="number" class="form-control" placeholder="Teléfono">
                            <label asp-for="Usuario.Telefono"><i class="fas fa-phone me-2"></i>Teléfono</label>
                            <span asp-validation-for="Usuario.Telefono" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Usuario.Ubicacion" class="form-control" placeholder="Ubicación">
                            <label asp-for="Usuario.Ubicacion"><i class="fas fa-map-marker-alt me-2"></i>Ubicación</label>
                            <span asp-validation-for="Usuario.Ubicacion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Documentación -->
                <div class="section-title">
                    <i class="fas fa-id-card me-2 text-primary"></i>Documentación (Opcional)
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Usuario.Documento" type="number" class="form-control" placeholder="Documento">
                            <label asp-for="Usuario.Documento"><i class="fas fa-id-card me-2"></i>Documento de Identidad</label>
                            <span asp-validation-for="Usuario.Documento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Usuario.Rut" class="form-control" placeholder="RUT (Opcional)">
                            <label asp-for="Usuario.Rut"><i class="fas fa-building me-2"></i>RUT (Opcional)</label>
                            <span asp-validation-for="Usuario.Rut" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Seguridad y Acceso -->
                <div class="section-title">
                    <i class="fas fa-shield-alt me-2 text-primary"></i>Seguridad y Acceso
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Usuario.Clave" type="password" class="form-control" placeholder="Contraseña">
                            <label asp-for="Usuario.Clave"><i class="fas fa-lock me-2"></i>Contraseña</label>
                            <span asp-validation-for="Usuario.Clave" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Usuario.Rol" class="form-select">
                                <option value="">Seleccionar rol...</option>
                                <option value="Usuario">👤 Usuario</option>
                                <option value="Huesped">🔍 Huésped</option>
                            </select>
                            <label asp-for="Usuario.Rol"><i class="fas fa-user-tag me-2"></i>Tipo de Usuario</label>
                            <span asp-validation-for="Usuario.Rol" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Campos ocultos para valores automáticos -->
                <input asp-for="Usuario.Permisos" type="hidden" value="limitado">
                <input asp-for="Usuario.Acesso" type="hidden" value="pendiente">

                <!-- Info sobre valores automáticos -->
                <div class="alert alert-info d-flex align-items-center" style="background: rgba(13, 110, 253, 0.1); border: 1px solid rgba(13, 110, 253, 0.2); border-radius: 12px;">
                    <i class="fas fa-info-circle me-2"></i>
                    <div>
                        <strong>Configuración automática:</strong> Tu cuenta será creada con <span class="badge bg-warning text-dark">Acceso Limitado</span> y estado <span class="badge bg-secondary">Pendiente de Activación</span>
                    </div>
                </div>

                <!-- Botón de Registro -->
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div>
                        <p class="text-muted mb-0">
                            ¿Ya tienes una cuenta?
                            <a href="/" class="login-link">Iniciar Sesión</a>
                        </p>
                    </div>
                    <button type="submit" class="btn btn-register" style="width: auto; padding: 12px 3rem;">
                        <i class="fas fa-user-plus me-2"></i>Crear Cuenta
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

