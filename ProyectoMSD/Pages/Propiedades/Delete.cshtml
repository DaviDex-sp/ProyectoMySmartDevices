@page
@model ProyectoMSD.Pages.Propiedades.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-red: #ef4444;
            --secondary-red: #f87171;
            --light-red: #fecaca;
            --extra-light-red: #fef2f2;
            --primary-blue: #3b82f6;
            --secondary-blue: #60a5fa;
            --text-dark: #1e293b;
            --text-light: #64748b;
            --bg-light: #f8fafc;
        }

        body {
            background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #bae6fd 100%);
            min-height: 100vh;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        .main-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        /* Property Header Card - Tema de eliminación */
        .property-header {
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--secondary-red) 100%);
            border-radius: 20px;
            padding: 2rem;
            color: white;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(239, 68, 68, 0.3);
            position: relative;
            overflow: hidden;
        }

            .property-header::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -50%;
                width: 100%;
                height: 100%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            }

        .property-icon-container {
            position: relative;
            display: inline-block;
        }

        .property-icon {
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.2);
            border: 4px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            margin-bottom: 1rem;
            backdrop-filter: blur(10px);
        }

        .delete-badge {
            position: absolute;
            bottom: 5px;
            right: 5px;
            background: #dc2626;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            z-index: 10;
        }

        .property-info h2 {
            font-size: 2rem;
            font-weight: 300;
            margin-bottom: 0.5rem;
        }

        .property-status {
            background: rgba(255, 255, 255, 0.2);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            display: inline-block;
            font-size: 0.9rem;
            backdrop-filter: blur(10px);
        }

        /* Content Layout - Single Column */
        .content-wrapper {
            display: block;
        }

        /* Delete Container */
        .delete-container {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 5px 25px rgba(0,0,0,0.08);
            border: 1px solid rgba(239, 68, 68, 0.1);
            margin-bottom: 2rem;
        }

        .delete-header {
            border-bottom: 2px solid #fef2f2;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            text-align: center;
        }

            .delete-header h3 {
                color: var(--primary-red);
                font-weight: 600;
                margin: 0;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 0.5rem;
            }

            .delete-header p {
                color: var(--text-light);
                margin: 0.5rem 0 0 0;
                font-size: 0.9rem;
            }

        .warning-box {
            background: var(--extra-light-red);
            border: 1px solid var(--light-red);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            border-left: 4px solid var(--primary-red);
            text-align: center;
        }

            .warning-box h4 {
                color: var(--primary-red);
                font-size: 1.1rem;
                font-weight: 600;
                margin-bottom: 0.5rem;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 0.5rem;
            }

            .warning-box p {
                color: var(--text-dark);
                margin: 0;
                font-size: 0.9rem;
            }

        /* Property Cards Layout */
        .property-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .detail-card {
            background: linear-gradient(145deg, #ffffff, #f8fafc);
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            border: 2px solid transparent;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .detail-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(135deg, var(--primary-red) 0%, var(--secondary-red) 100%);
            }

            .detail-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.12);
                border-color: rgba(239, 68, 68, 0.2);
            }

        .card-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--secondary-red) 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        .card-label {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text-light);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.5rem;
        }

        .card-value {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text-dark);
            word-break: break-word;
            min-height: 2rem;
            display: flex;
            align-items: center;
        }

        /* Action Buttons */
        .action-section {
            background: #f8fafc;
            border-radius: 15px;
            padding: 2rem;
            text-align: center;
        }

        .btn-danger-custom {
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--secondary-red) 100%);
            border: none;
            color: white;
            padding: 1rem 3rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-right: 1rem;
        }

            .btn-danger-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(239, 68, 68, 0.3);
            }

        .btn-secondary-custom {
            background: white;
            border: 2px solid var(--primary-blue);
            color: var(--primary-blue);
            padding: 1rem 3rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }

            .btn-secondary-custom:hover {
                background: var(--primary-blue);
                color: white;
                transform: translateY(-1px);
            }

        /* Owner Info Special Card */
        .owner-card {
            background: linear-gradient(135deg, #eff6ff, #dbeafe);
            border: 2px solid var(--primary-blue);
        }

            .owner-card::before {
                background: linear-gradient(135deg, var(--primary-blue) 0%, var(--secondary-blue) 100%);
            }

            .owner-card .card-icon {
                background: linear-gradient(135deg, var(--primary-blue) 0%, var(--secondary-blue) 100%);
            }
        {
            grid-template-columns: 1fr;
        }

        .property-header {
            padding: 1.5rem;
        }

        .property-icon {
            width: 80px;
            height: 80px;
            font-size: 2rem;
        }

        .delete-badge {
            bottom: 3px;
            right: 3px;
            padding: 0.2rem 0.6rem;
            font-size: 0.65rem;
        }

        .property-info h2 {
            font-size: 1.5rem;
        }

        .btn-danger-custom,
        .btn-secondary-custom {
            display: block;
            margin: 0.5rem 0;
            width: 100%;
        }

        }
    </style>
</head>

<body>
    <div class="main-container">
        <!-- Property Header -->
        <div class="property-header">
            <div class="d-flex align-items-center">
                <!-- ✅ AGREGADO - Container para el icono -->
                <div class="property-icon-container me-4">
                    <div class="property-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="delete-badge">ELIMINAR</div>
                </div>
                <div class="property-info flex-grow-1">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h2 class="mb-2">@(Model.Propiedade?.Direccion ?? "Propiedad")</h2>
                            <div class="property-status">
                                ⚠️ Confirmación requerida: Eliminar propiedad del sistema
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="content-wrapper">
            <!-- Delete Container -->
            <div class="delete-container">
                <div class="delete-header">
                    <h3>
                        <i class="fas fa-building"></i>
                        Eliminar Propiedad
                    </h3>
                    <p>Confirma la eliminación permanente de esta propiedad del sistema</p>
                </div>

                <div class="warning-box">
                    <h4>
                        <i class="fas fa-exclamation-triangle"></i>
                        ¡Atención! Esta acción eliminará toda la propiedad
                    </h4>
                    <p>Una vez eliminada, toda la información de la propiedad, incluyendo espacios asociados y configuraciones, se perderá permanentemente.</p>
                </div>

                <!-- Property Details Cards -->
                <div class="property-details">
                    <div class="detail-card">
                        <div class="card-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="card-label">Dirección</div>
                        <div class="card-value">@Html.DisplayFor(model => model.Propiedade.Direccion)</div>
                    </div>

                    <div class="detail-card">
                        <div class="card-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <div class="card-label">Tipo de Propiedad</div>
                        <div class="card-value">@Html.DisplayFor(model => model.Propiedade.Tipo)</div>
                    </div>

                    <div class="detail-card">
                        <div class="card-icon">
                            <i class="fas fa-layer-group"></i>
                        </div>
                        <div class="card-label">Número de Pisos</div>
                        <div class="card-value">@Html.DisplayFor(model => model.Propiedade.Pisos) pisos</div>
                    </div>

                    <div class="detail-card owner-card">
                        <div class="card-icon">
                            <i class="fas fa-user-crown"></i>
                        </div>
                        <div class="card-label">Propietario</div>
                        <div class="card-value">
                            @if (Model.Propiedade?.IdUsuariosNavigation != null)
                            {
                                <span>@Model.Propiedade.IdUsuariosNavigation.Nombre</span>
                            }
                            else
                            {
                                <span class="text-muted">Usuario ID: @Model.Propiedade?.IdUsuarios</span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Action Section -->
                <div class="action-section">
                    <h5 class="mb-4 text-dark">¿Continuar con la eliminación?</h5>
                    <form method="post" style="display: inline;">
                        <input type="hidden" asp-for="Propiedade.Id" />
                        <div class="d-flex justify-content-center align-items-center flex-wrap gap-3">
                            <a asp-page="./Index" class="btn-secondary-custom">
                                <i class="fas fa-arrow-left me-2"></i>Cancelar y Volver
                            </a>
                            <button type="submit" class="btn-danger-custom" onclick="return confirm('¿Estás absolutamente seguro de eliminar esta propiedad? Esta acción NO se puede deshacer y eliminará todos los espacios asociados.');">
                                <i class="fas fa-trash-alt me-2"></i>Sí, Eliminar Propiedad
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Enhanced delete confirmation
        document.querySelector('.btn-danger-custom').addEventListener('click', function(e) {
            const propertyAddress = '@Html.Raw(Model.Propiedade?.Direccion ?? "esta propiedad")';
            const confirmMsg = `🏠 CONFIRMACIÓN DE ELIMINACIÓN 🏠\n\n¿Estás ABSOLUTAMENTE SEGURO de eliminar la propiedad:\n"${propertyAddress}"?\n\n❌ Esta acción es PERMANENTE e IRREVERSIBLE\n❌ Se eliminarán TODOS los espacios asociados\n❌ Se perderán TODAS las configuraciones\n❌ No hay forma de recuperar la información\n\n¿Continuar con la eliminación?`;

            if (!confirm(confirmMsg)) {
                e.preventDefault();
                return false;
            }
        });

        // Card hover effects
        document.querySelectorAll('.detail-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px) scale(1.02)';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });
    </script>
</body>
</html>