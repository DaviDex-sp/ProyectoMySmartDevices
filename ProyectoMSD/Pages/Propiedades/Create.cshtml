@page
@model ProyectoMSD.Pages.Propiedades.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-home me-2"></i>Crear Nueva Propiedad</h3>
                </div>

                <div class="card-body">
                    <form method="post">
                        <!-- MOSTRAR TODOS los errores -->
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Propiedade.Direccion" class="form-label fw-bold">
                                <i class="fas fa-map-marker-alt me-1"></i>Dirección
                            </label>
                            <input asp-for="Propiedade.Direccion" class="form-control" placeholder="Ej: Calle 123 #45-67">
                            <span asp-validation-for="Propiedade.Direccion" class="text-danger fw-bold"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Propiedade.Tipo" class="form-label">
                                <i class="fas fa-building me-1 text-primary"></i>Tipo de Propiedad
                            </label>
                            <select asp-for="Propiedade.Tipo" class="form-control">
                                <option value="">Seleccionar tipo de propiedad...</option>
                                <option value="casa">🏠 Casa</option>
                                <option value="apartamento">🏢 Apartamento</option>
                                <option value="local">🏪 Local</option>
                                <option value="oficina">🏢 Oficina</option>
                                <option value="finca">🌿 Finca</option>
                            </select>
                            <span asp-validation-for="Propiedade.Tipo" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Propiedade.Pisos" class="form-label fw-bold">
                                <i class="fas fa-layer-group me-1"></i>Número de Pisos
                            </label>
                            <input asp-for="Propiedade.Pisos" type="number" min="1" class="form-control" placeholder="Ej: 2">
                            <span asp-validation-for="Propiedade.Pisos" class="text-danger fw-bold"></span>
                        </div>

                        <!-- DROPDOWN MEJORADO -->
                        <div class="mb-4">
                            <label asp-for="Propiedade.IdUsuarios" class="form-label fw-bold">
                                <i class="fas fa-user me-1"></i>Usuario Propietario
                            </label>
                            <select asp-for="Propiedade.IdUsuarios"
                                    class="form-select"
                                    asp-items="ViewBag.IdUsuarios">
                                <option value="">-- Seleccione un usuario --</option>
                            </select>
                            <span asp-validation-for="Propiedade.IdUsuarios" class="text-danger fw-bold"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Seleccione el usuario responsable de esta propiedad
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Crear Propiedad
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const select = document.querySelector('select[name="Propiedade.IdUsuarios"]');

            console.log('=== DEBUGGING DROPDOWN ===');
            console.log('Opciones encontradas:', select.options.length);

            for (let i = 0; i < select.options.length; i++) {
                console.log(`Opción ${i}: Value="${select.options[i].value}", Text="${select.options[i].text}"`);
            }

            select.addEventListener('change', function() {
                console.log('Usuario seleccionado:', this.value, this.options[this.selectedIndex].text);
            });
        });
    </script>
}