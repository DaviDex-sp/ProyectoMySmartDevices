@page
@model ProyectoMSD.Pages.Soportes.DetailsModel

@{
    ViewData["Title"] = "Detalles del Soporte";
}

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewData["Title"]</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    :root {
        --primary-blue: #3b82f6;
        --secondary-blue: #60a5fa;
        --light-blue: #dbeafe;
        --extra-light-blue: #eff6ff;
        --text-dark: #1e293b;
        --text-light: #64748b;
        --bg-light: #f8fafc;
        --success-green: #10b981;
        --warning-yellow: #f59e0b;
    }

    body {
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #bae6fd 100%);
        min-height: 100vh;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .main-container {
        max-width: 900px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .support-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 5px 25px rgba(0,0,0,0.08);
        border: 1px solid rgba(59, 130, 246, 0.1);
    }

    .support-header {
        text-align: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f1f3f4;
    }

    .support-icon {
        width: 80px;
        height: 80px;
        background: var(--primary-blue);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
        margin: 0 auto 1rem;
    }

    .support-title {
        font-size: 2rem;
        font-weight: 600;
        color: var(--primary-blue);
        margin-bottom: 0.5rem;
    }

    .support-subtitle {
        color: var(--text-light);
        font-size: 1.1rem;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 1rem 0;
        border-bottom: 1px solid #f1f3f4;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        font-weight: 600;
        color: var(--text-dark);
        display: flex;
        align-items: center;
        min-width: 150px;
    }

        .detail-label i {
            margin-right: 0.5rem;
            color: var(--primary-blue);
        }

    .detail-value {
        font-weight: 500;
        color: var(--text-light);
        text-align: right;
        flex: 1;
        margin-left: 1rem;
    }

    .detail-description {
        background: var(--extra-light-blue);
        padding: 1rem;
        border-radius: 8px;
        border-left: 4px solid var(--primary-blue);
        margin-top: 0.5rem;
        text-align: left;
        font-style: italic;
    }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-pending {
        background-color: #fef3c7;
        color: #92400e;
    }

    .status-answered {
        background-color: #d1fae5;
        color: #065f46;
    }

    .btn-back {
        background: white;
        border: 2px solid var(--primary-blue);
        color: var(--primary-blue);
        padding: 0.75rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: var(--primary-blue);
            color: white;
            transform: translateY(-1px);
        }

    .text-center {
        text-align: center;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }
</style>

<body>
    <div class="main-container">
        <div class="support-card">
            <!-- Header -->
            <div class="support-header">
                <div class="support-icon">
                    <i class="fas fa-headset"></i>
                </div>
                <h1 class="support-title">Ticket #@Html.DisplayFor(model => model.Soporte.Id)</h1>
                <p class="support-subtitle">Detalles completos del ticket de soporte</p>
            </div>

            <!-- Detalles -->
            <div class="support-details">
                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-calendar-alt"></i>
                        Fecha
                    </div>
                    <div class="detail-value">@Html.DisplayFor(model => model.Soporte.Fecha)</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-list-alt"></i>
                        Tipo
                    </div>
                    <div class="detail-value">@Html.DisplayFor(model => model.Soporte.Tipo)</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-file-alt"></i>
                        Descripción
                    </div>
                    <div class="detail-value">
                        <div class="detail-description">
                            @Html.DisplayFor(model => model.Soporte.Descripcion)
                        </div>
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-reply"></i>
                        Respuesta
                    </div>
                    <div class="detail-value">
                        @if (!String.IsNullOrEmpty(Model.Soporte.Respuesta))
                        {
                            <div class="detail-description">
                                @Html.DisplayFor(model => model.Soporte.Respuesta)
                            </div>
                        }
                        else
                        {
                            <span class="text-muted"><em>Sin respuesta aún</em></span>
                        }
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-user"></i>
                        Usuario Asignado
                    </div>
                    <div class="detail-value">@(Model.Soporte.IdUsuariosNavigation?.Nombre ?? "No asignado")</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-info-circle"></i>
                        Estado
                    </div>
                    <div class="detail-value">
                        @if (!String.IsNullOrEmpty(Model.Soporte.Respuesta))
                        {
                            <span class="status-badge status-answered">Respondido</span>
                        }
                        else
                        {
                            <span class="status-badge status-pending">Pendiente</span>
                        }
                    </div>
                </div>
            </div>

            <!-- Botón Volver -->
            <div class="text-center mt-4">
                <a asp-page="./Index" class="btn-back">
                    <i class="fas fa-arrow-left me-2"></i>Volver a la lista
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
