@page
@model ProyectoMSD.Pages.Soportes.DeleteModel

@{
    ViewData["Title"] = "Eliminar Soporte";
}

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewData["Title"]</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    :root {
        --danger-red: #dc3545;
        --danger-light: #f8d7da;
        --danger-dark: #b02a37;
        --text-dark: #1e293b;
        --text-light: #64748b;
        --bg-light: #f8fafc;
    }

    body {
        background: linear-gradient(135deg, #fff5f5 0%, #fed7d7 50%, #fc8181 100%);
        min-height: 100vh;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .main-container {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    /* Danger Header Card */
    .danger-header {
        background: linear-gradient(135deg, var(--danger-red) 0%, var(--danger-dark) 100%);
        border-radius: 20px;
        padding: 2rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(220, 53, 69, 0.3);
        position: relative;
        overflow: hidden;
    }

        .danger-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        }

    .danger-icon {
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.2);
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: white;
        margin-bottom: 1rem;
        backdrop-filter: blur(10px);
        margin-right: 2rem;
    }

    .delete-badge {
        position: absolute;
        bottom: 5px;
        right: 5px;
        background: #fff;
        color: var(--danger-red);
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        z-index: 10;
    }

    /* Warning Section */
    .warning-section {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 5px 25px rgba(0,0,0,0.08);
        border: 1px solid rgba(220, 53, 69, 0.2);
        margin-bottom: 2rem;
    }

    .warning-header {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f1f3f4;
    }

        .warning-header i {
            font-size: 2rem;
            color: var(--danger-red);
            margin-right: 1rem;
        }

        .warning-header h3 {
            color: var(--danger-red);
            font-weight: 600;
            margin: 0;
        }

    .warning-text {
        color: var(--text-dark);
        font-size: 1.1rem;
        margin-bottom: 2rem;
        background: var(--danger-light);
        padding: 1rem;
        border-radius: 12px;
        border-left: 4px solid var(--danger-red);
    }

    /* Support Details - Grid sin Media Queries */
    .support-details {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .detail-row {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 1rem;
        align-items: flex-start;
        padding: 0.75rem 0;
        border-bottom: 1px solid #e9ecef;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        font-weight: 600;
        color: var(--text-dark);
        display: flex;
        align-items: center;
        min-width: 150px;
    }

        .detail-label i {
            margin-right: 0.5rem;
            color: var(--danger-red);
        }

    .detail-value {
        font-weight: 500;
        color: var(--text-light);
        background: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        border: 1px solid #dee2e6;
        word-break: break-word;
    }

    .detail-description {
        max-height: 100px;
        overflow-y: auto;
        font-size: 0.9rem;
    }

    /* Buttons */
    .btn-danger-custom {
        background: linear-gradient(135deg, var(--danger-red) 0%, var(--danger-dark) 100%);
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .btn-danger-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
        }

    .btn-secondary-custom {
        background: white;
        border: 2px solid var(--text-light);
        color: var(--text-dark);
        padding: 0.75rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

        .btn-secondary-custom:hover {
            background: var(--text-light);
            color: white;
            transform: translateY(-1px);
        }

    /* Support Status Badge */
    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-pending {
        background-color: #fef3c7;
        color: #92400e;
    }

    .status-answered {
        background-color: #d1fae5;
        color: #065f46;
    }
</style>

<body>
    <div class="main-container">
        <!-- Danger Header -->
        <div class="danger-header">
            <div class="d-flex align-items-center">
                <div class="position-relative">
                    <div class="danger-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="delete-badge">ELIMINAR</div>
                </div>
                <div class="flex-grow-1">
                    <h2 class="mb-2">¿Eliminar Ticket de Soporte?</h2>
                    <div class="support-status">
                        <strong>¡ATENCIÓN!</strong> Esta acción eliminará permanentemente el historial del ticket
                    </div>
                </div>
            </div>
        </div>

        <!-- Warning Section -->
        <div class="warning-section">
            <div class="warning-header">
                <i class="fas fa-exclamation-circle"></i>
                <h3>Confirmación de Eliminación</h3>
            </div>

            <div class="warning-text">
                <strong>¿Estás seguro de que quieres eliminar este ticket de soporte?</strong><br>
                Esta acción eliminará permanentemente toda la información del ticket, incluyendo la descripción, respuestas y historial de actividad.
            </div>

            <!-- Support Details -->
            <div class="support-details">
                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-hashtag"></i>
                        ID del Ticket
                    </div>
                    <div class="detail-value">#@Html.DisplayFor(model => model.Soporte.Id)</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-calendar-alt"></i>
                        Fecha
                    </div>
                    <div class="detail-value">@Html.DisplayFor(model => model.Soporte.Fecha)</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-list-alt"></i>
                        Tipo de Soporte
                    </div>
                    <div class="detail-value">@Html.DisplayFor(model => model.Soporte.Tipo)</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-file-alt"></i>
                        Descripción
                    </div>
                    <div class="detail-value detail-description">
                        @Html.DisplayFor(model => model.Soporte.Descripcion)
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-reply"></i>
                        Respuesta
                    </div>
                    <div class="detail-value detail-description">
                        @if (!String.IsNullOrEmpty(Model.Soporte.Respuesta))
                        {
                            @Html.DisplayFor(model => model.Soporte.Respuesta)
                        }
                        else
                        {
                            <span class="text-muted"><em>Sin respuesta</em></span>
                        }
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-user"></i>
                        Usuario Asignado
                    </div>
                    <div class="detail-value">@(Model.Soporte.IdUsuariosNavigation?.Nombre ?? "No asignado")</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-info-circle"></i>
                        Estado
                    </div>
                    <div class="detail-value">
                        @if (!String.IsNullOrEmpty(Model.Soporte.Respuesta))
                        {
                            <span class="status-badge status-answered">Respondido</span>
                        }
                        else
                        {
                            <span class="status-badge status-pending">Pendiente</span>
                        }
                    </div>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Soporte.Id" />
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-page="./Index" class="btn-secondary-custom">
                        <i class="fas fa-arrow-left me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn-danger-custom" onclick="return confirm('¿Estás completamente seguro? Esta acción eliminará todo el historial del ticket y no se puede deshacer.')">
                        <i class="fas fa-trash me-2"></i>Confirmar Eliminación
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
