@page
@model ProyectoMSD.Pages.Dispositivos.CreateModel

        @{
        ViewData["Title"] = "Create";
        }

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-mobile-alt me-2"></i>Crear Nuevo Dispositivo</h3>
                </div>

                <div class="card-body">
                    <form method="post">
                        <!-- MOSTRAR TODOS los errores -->
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Dispositivo.Nombre" class="form-label fw-bold">
                                <i class="fas fa-tag me-1"></i>Nombre del Dispositivo
                            </label>
                            <input asp-for="Dispositivo.Nombre" class="form-control" placeholder="Ej: iPhone 13 Pro">
                            <span asp-validation-for="Dispositivo.Nombre" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Dispositivo.Tipo" class="form-label fw-bold">
                                <i class="fas fa-list me-1"></i>Tipo de Dispositivo
                            </label>
                            <input asp-for="Dispositivo.Tipo" class="form-control" placeholder="Ej: Smartphone, Tablet, Laptop">
                            <span asp-validation-for="Dispositivo.Tipo" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Dispositivo.Usos" class="form-label fw-bold">
                                <i class="fas fa-tasks me-1"></i>Usos del Dispositivo
                            </label>
                            <input asp-for="Dispositivo.Usos" class="form-control" placeholder="Ej: Personal, Trabajo, Gaming">
                            <span asp-validation-for="Dispositivo.Usos" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Dispositivo.Marca" class="form-label fw-bold">
                                <i class="fas fa-industry me-1"></i>Marca
                            </label>
                            <input asp-for="Dispositivo.Marca" class="form-control" placeholder="Ej: Apple, Samsung, Dell">
                            <span asp-validation-for="Dispositivo.Marca" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Dispositivo.Estado" class="form-label fw-bold">
                                <i class="fas fa-check-circle me-1"></i>Estado
                            </label>
                            <input asp-for="Dispositivo.Estado" class="form-control" placeholder="Ej: Nuevo, Usado, Reparado">
                            <span asp-validation-for="Dispositivo.Estado" class="text-danger fw-bold"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Crear Dispositivo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('=== FORMULARIO DISPOSITIVO CARGADO ===');

            const form = document.querySelector('form');
            form.addEventListener('submit', function(event) {
                console.log('Enviando formulario dispositivo...');
            });
        });
    </script>
}