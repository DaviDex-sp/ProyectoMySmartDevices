@page
@model ProyectoMSD.Pages.Dispositivos.EditModel

@{
    ViewData["Title"] = "Editar Dispositivo";
}

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewData["Title"]</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    :root {
        --primary-blue: #3b82f6;
        --secondary-blue: #60a5fa;
        --light-blue: #dbeafe;
        --extra-light-blue: #eff6ff;
        --text-dark: #1e293b;
        --text-light: #64748b;
        --bg-light: #f8fafc;
    }

    body {
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #bae6fd 100%);
        min-height: 100vh;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .main-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    /* Device Header Card */
    .device-header {
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--secondary-blue) 100%);
        border-radius: 20px;
        padding: 2rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3);
        position: relative;
        overflow: hidden;
    }

        .device-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        }

    .device-icon-container {
        position: relative;
        display: inline-block;
    }

    .device-icon {
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.2);
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: white;
        margin-bottom: 1rem;
        backdrop-filter: blur(10px);
    }

    .edit-badge {
        position: absolute;
        bottom: 5px;
        right: 5px;
        background: #06b6d4;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        z-index: 10;
    }

    .device-info h2 {
        font-size: 2rem;
        font-weight: 300;
        margin-bottom: 0.5rem;
    }

    .device-status {
        background: rgba(255, 255, 255, 0.2);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        display: inline-block;
        font-size: 0.9rem;
        backdrop-filter: blur(10px);
    }

    /* Content Layout */
    .content-wrapper {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 2rem;
        align-items: start;
    }

    /* Form Container */
    .form-container {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 5px 25px rgba(0,0,0,0.08);
        border: 1px solid rgba(59, 130, 246, 0.1);
    }

    .form-header {
        border-bottom: 2px solid #f1f3f4;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
    }

        .form-header h3 {
            color: var(--primary-blue);
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-header p {
            color: var(--text-light);
            margin: 0.5rem 0 0 0;
            font-size: 0.9rem;
        }

    /* Form Styles */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: #fafbfc;
    }

        .form-control:focus {
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25);
            background: white;
        }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-grid-full {
        grid-column: 1 / -1;
    }

    /* Activity Sidebar */
    .activity-sidebar {
        background: white;
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 5px 25px rgba(0,0,0,0.08);
        height: fit-content;
        position: sticky;
        top: 2rem;
    }

    .activity-header {
        color: var(--text-light);
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 1.5rem;
    }

    .activity-item {
        background: var(--extra-light-blue);
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1rem;
        border-left: 4px solid var(--primary-blue);
        transition: all 0.2s ease;
    }

        .activity-item:hover {
            transform: translateX(3px);
            box-shadow: 0 3px 10px rgba(59, 130, 246, 0.1);
        }

    /* Buttons */
    .btn-primary-custom {
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--secondary-blue) 100%);
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
        }

    .btn-secondary-custom {
        background: white;
        border: 2px solid var(--primary-blue);
        color: var(--primary-blue);
        padding: 0.75rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

        .btn-secondary-custom:hover {
            background: var(--primary-blue);
            color: white;
            transform: translateY(-1px);
        }

    /* Info Cards */
    .info-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .info-card {
        background: var(--extra-light-blue);
        border-radius: 12px;
        padding: 1rem;
        text-align: center;
        border: 1px solid var(--light-blue);
    }

    .info-card-icon {
        font-size: 1.5rem;
        color: var(--primary-blue);
        margin-bottom: 0.5rem;
    }

    .info-card-value {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 0.25rem;
    }

    .info-card-label {
        font-size: 0.8rem;
        color: var(--text-light);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
</style>

<body>
    <div class="main-container">
        <!-- Device Header -->
        <div class="device-header">
            <div class="d-flex align-items-center">
                <div class="device-icon-container me-4">
                    <div class="device-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <div class="edit-badge">EDITAR</div>
                </div>
                <div class="device-info flex-grow-1">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h2 class="mb-2">@(Model.Dispositivo?.Nombre ?? "Dispositivo")</h2>
                            <div class="device-status">
                                En progreso: Editando información del dispositivo
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Info Cards -->
        <div class="info-cards">
            <div class="info-card">
                <div class="info-card-icon">
                    <i class="fas fa-tag"></i>
                </div>
                <div class="info-card-value">@(Model.Dispositivo?.Nombre ?? "N/A")</div>
                <div class="info-card-label">Nombre Actual</div>
            </div>
            <div class="info-card">
                <div class="info-card-icon">
                    <i class="fas fa-list"></i>
                </div>
                <div class="info-card-value">@(Model.Dispositivo?.Tipo ?? "N/A")</div>
                <div class="info-card-label">Tipo</div>
            </div>
            <div class="info-card">
                <div class="info-card-icon">
                    <i class="fas fa-industry"></i>
                </div>
                <div class="info-card-value">@(Model.Dispositivo?.Marca ?? "N/A")</div>
                <div class="info-card-label">Marca</div>
            </div>
            <div class="info-card">
                <div class="info-card-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="info-card-value">@(Model.Dispositivo?.Estado ?? "N/A")</div>
                <div class="info-card-label">Estado</div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="content-wrapper">
            <!-- Form Section -->
            <div class="form-container">
                <div class="form-header">
                    <h3>
                        <i class="fas fa-edit"></i>
                        Información del Dispositivo
                    </h3>
                    <p>Actualiza los datos del dispositivo en el sistema</p>
                </div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Dispositivo.Id" />

                    <div class="form-grid">
                        <div class="form-group form-grid-full">
                            <label class="form-label">
                                <i class="fas fa-tag me-1 text-primary"></i>Nombre del Dispositivo
                            </label>
                            <input asp-for="Dispositivo.Nombre" class="form-control" placeholder="Ingresa el nombre del dispositivo" />
                            <span asp-validation-for="Dispositivo.Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-list me-1 text-primary"></i>Tipo de Dispositivo
                            </label>
                            <input asp-for="Dispositivo.Tipo" class="form-control" placeholder="Ej: Smartphone, Tablet" />
                            <span asp-validation-for="Dispositivo.Tipo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-tasks me-1 text-primary"></i>Usos
                            </label>
                            <input asp-for="Dispositivo.Usos" class="form-control" placeholder="Ej: Personal, Trabajo" />
                            <span asp-validation-for="Dispositivo.Usos" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-industry me-1 text-primary"></i>Marca
                            </label>
                            <input asp-for="Dispositivo.Marca" class="form-control" placeholder="Ej: Apple, Samsung" />
                            <span asp-validation-for="Dispositivo.Marca" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-check-circle me-1 text-primary"></i>Estado
                            </label>
                            <input asp-for="Dispositivo.Estado" class="form-control" placeholder="Ej: Nuevo, Usado" />
                            <span asp-validation-for="Dispositivo.Estado" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-page="./Index" class="btn-secondary-custom">
                            <i class="fas fa-arrow-left me-2"></i>Volver a la lista
                        </a>
                        <button type="submit" class="btn-primary-custom">
                            <i class="fas fa-save me-2"></i>Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>

            <!-- Activity Sidebar -->
            <div class="activity-sidebar">
                <div class="activity-header">Actividad Reciente</div>

                <div class="activity-item">
                    <div class="activity-status">En progreso</div>
                    <div class="activity-title">Editando dispositivo</div>
                    <a href="#" class="activity-action">Ver detalles</a>
                </div>

                <div class="activity-item">
                    <div class="activity-status">Hace 20 minutos</div>
                    <div class="activity-title">Dispositivo actualizado</div>
                    <div class="activity-action">Sistema</div>
                </div>

                <div class="activity-item">
                    <div class="activity-status">Hace 2 horas</div>
                    <div class="activity-title">Estado modificado</div>
                    <div class="activity-action">Configuración</div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Form enhancements - actualizar info cards dinámicamente
        document.querySelector('input[name="Dispositivo.Nombre"]')?.addEventListener('input', function() {
            const card = document.querySelector('.info-card:nth-child(1) .info-card-value');
            card.textContent = this.value || 'N/A';
        });

        document.querySelector('input[name="Dispositivo.Tipo"]')?.addEventListener('input', function() {
            const card = document.querySelector('.info-card:nth-child(2) .info-card-value');
            card.textContent = this.value || 'N/A';
        });

        document.querySelector('input[name="Dispositivo.Marca"]')?.addEventListener('input', function() {
            const card = document.querySelector('.info-card:nth-child(3) .info-card-value');
            card.textContent = this.value || 'N/A';
        });

        document.querySelector('input[name="Dispositivo.Estado"]')?.addEventListener('input', function() {
            const card = document.querySelector('.info-card:nth-child(4) .info-card-value');
            card.textContent = this.value || 'N/A';
        });
    </script>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
