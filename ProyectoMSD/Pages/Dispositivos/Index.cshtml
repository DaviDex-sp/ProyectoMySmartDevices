@page
@model ProyectoMSD.Pages.Dispositivos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    :root {
        --primary-green: #4a90e2;
    --light-green: #b3d4fc;
    --dark-green: #2c5aa0;
    }

    .devices-header {
        background: var(--primary-green);
        color: white;
        padding: 2.5rem 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .devices-header::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 200px;
            height: 200px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            transform: translate(50px, -50px);
        }

    .devices-table-container {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0,0,0,0.08);
        border: 1px solid rgba(127, 176, 105, 0.1);
    }

    .table-header {
        background: var(--light-green);
        color: var(--dark-green);
        padding: 1.5rem 2rem;
        border-bottom: 2px solid var(--primary-green);
    }

    .custom-table {
        margin-bottom: 0;
    }

        .custom-table th {
            background: var(--light-green);
            color: var(--dark-green);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            border: none;
            padding: 1.2rem;
        }

        .custom-table td {
            padding: 1.2rem;
            vertical-align: middle;
            border-bottom: 1px solid rgba(127, 176, 105, 0.1);
        }

        .custom-table tbody tr:hover {
            background: rgba(127, 176, 105, 0.05);
            transform: translateY(-1px);
            transition: all 0.3s ease;
        }

    .device-status {
        display: inline-flex;
        align-items: center;
    }

    .status-toggle {
        width: 50px;
        height: 26px;
        background: #dc3545;
        border-radius: 50px;
        position: relative;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .status-toggle.active {
            background: var(--primary-green);
        }

        .status-toggle::after {
            content: '';
            position: absolute;
            top: 2px;
            left: 2px;
            width: 22px;
            height: 22px;
            background: white;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .status-toggle.active::after {
            transform: translateX(24px);
        }

    .badge-device {
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-weight: 500;
        font-size: 0.85rem;
    }

    .badge-camara {
        background: #e3f2fd;
        color: #1565c0;
    }

    .badge-luz {
        background: #fff3e0;
        color: #ef6c00;
    }

    .badge-puerta {
        background: #fce4ec;
        color: #c2185b;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        border-radius: 10px;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: #fff3cd;
        color: #856404;
    }

        .btn-edit:hover {
            background: #ffc107;
            color: white;
            transform: translateY(-2px);
        }

    .btn-details {
        background: #d1ecf1;
        color: #0c5460;
    }

        .btn-details:hover {
            background: #17a2b8;
            color: white;
            transform: translateY(-2px);
        }

    .btn-delete {
        background: #f8d7da;
        color: #721c24;
    }

        .btn-delete:hover {
            background: #dc3545;
            color: white;
            transform: translateY(-2px);
        }

    .create-button {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 60px;
        height: 60px;
        background: var(--primary-green);
        color: white;
        border: none;
        border-radius: 50%;
        font-size: 1.5rem;
        box-shadow: 0 4px 20px rgba(127, 176, 105, 0.4);
        transition: all 0.3s ease;
        z-index: 1000;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .create-button:hover {
            background: var(--dark-green);
            color: white;
            transform: scale(1.1);
            box-shadow: 0 6px 25px rgba(127, 176, 105, 0.6);
            text-decoration: none;
        }

    .stats-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border-left: 4px solid var(--primary-green);
        margin-bottom: 1rem;
    }
</style>

<div class="container-fluid px-4 py-4">

    <!-- Header de Dispositivos -->
    <div class="devices-header text-center">
        <h1 class="display-4 fw-bold mb-3">
            <i class="fas fa-microchip me-3"></i>Lista de Dispositivos
        </h1>
        <p class="lead mb-0">Control y administración de todos los dispositivos inteligentes</p>
    </div>

    <!-- Estadísticas Rápidas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stats-card">
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 class="fw-bold text-success">@Model.Dispositivo.Count()</h3>
                        <p class="text-muted mb-0">Total Dispositivos</p>
                    </div>
                    <i class="fas fa-microchip fa-2x text-success"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 class="fw-bold text-success">
                            @Model.Dispositivo.Count(d =>
                            !string.IsNullOrEmpty(d.Estado) &&
                            d.Estado.ToLower().Trim() switch
                            {
                                "activo" or "active" or "encendido" or "on" or "1" or "habilitado" or "conectado" or "funcionando" => true,
                                _ => false
                            })
                        </h3>
                        <p class="text-muted mb-0">Activos</p>
                    </div>
                    <i class="fas fa-power-off fa-2x text-success"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 class="fw-bold text-primary">@Model.Dispositivo.GroupBy(d => d.Tipo).Count()</h3>
                        <p class="text-muted mb-0">Tipos Diferentes</p>
                    </div>
                    <i class="fas fa-layer-group fa-2x text-primary"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 class="fw-bold text-warning">@Model.Dispositivo.GroupBy(d => d.Marca).Count()</h3>
                        <p class="text-muted mb-0">Marcas</p>
                    </div>
                    <i class="fas fa-tags fa-2x text-warning"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Dispositivos -->
    <div class="devices-table-container">
        <div class="table-header">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0 fw-bold">
                    <i class="fas fa-list me-2"></i>Lista de Dispositivos
                </h3>
                <span class="badge bg-primary fs-6 px-3 py-2">@Model.Dispositivo.Count() dispositivos registrados</span>
            </div>
        </div>

        @if (Model.Dispositivo != null && Model.Dispositivo.Any())
        {
            <table class="table custom-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-hashtag me-2"></i>ID</th>
                        <th><i class="fas fa-tag me-2"></i>Tipo</th>
                        <th><i class="fas fa-signature me-2"></i>Nombre</th>
                        <th><i class="fas fa-wrench me-2"></i>Usos</th>
                        <th><i class="fas fa-industry me-2"></i>Marca</th>
                        <th><i class="fas fa-toggle-on me-2"></i>Estado</th>
                        <th><i class="fas fa-cogs me-2"></i>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Dispositivo)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-secondary fs-6">@Html.DisplayFor(modelItem => item.Id)</span>
                            </td>
                            <td>
                                @{
                                    var tipoClass = item.Tipo?.ToLower() switch
                                    {
                                        "camara" or "cámara" => "badge-camara",
                                        "luz" => "badge-luz",
                                        "puerta" => "badge-puerta",
                                        _ => "bg-light text-dark"
                                    };

                                    var tipoIcon = item.Tipo?.ToLower() switch
                                    {
                                        "camara" or "cámara" => "fa-camera",
                                        "luz" => "fa-lightbulb",
                                        "puerta" => "fa-door-open",
                                        _ => "fa-microchip"
                                    };
                                }
                                <span class="badge-device @tipoClass">
                                    <i class="fas @tipoIcon me-1"></i>
                                    @Html.DisplayFor(modelItem => item.Tipo)
                                </span>
                            </td>
                            <td>
                                <div class="fw-bold">@Html.DisplayFor(modelItem => item.Nombre)</div>
                            </td>
                            <td>
                                <span class="text-muted">@Html.DisplayFor(modelItem => item.Usos)</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-industry me-2 text-muted"></i>
                                    <span class="fw-semibold">@Html.DisplayFor(modelItem => item.Marca)</span>
                                </div>
                            </td>
                            <td>
                                <div class="device-status">
                                    @{
                                        var estadoLower = item.Estado?.ToLower()?.Trim();
                                        var isActive = estadoLower switch
                                        {
                                            "activo" or "active" or "encendido" or "on" or "1" or "habilitado" or "conectado" or "funcionando" => true,
                                            _ => false
                                        };
                                    }
                                    <div class="status-toggle @(isActive ? "active" : "")"
                                         title="@(isActive ? "Dispositivo Activo" : "Dispositivo Inactivo")">
                                    </div>
                                    <span class="ms-2 fw-semibold @(isActive ? "text-success" : "text-danger")">
                                        @Html.DisplayFor(modelItem => item.Estado)
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-page="./Details" asp-route-id="@item.Id"
                                           class="btn-action btn-details"
                                           title="Ver detalles del dispositivo"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@item.Id"
                                            class="btn-action btn-edit"
                                           title="Editar dispositivo"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id"
                                        class="btn-action btn-delete"
                                        title="Eliminar dispositivo"
                                        data-bs-toggle="tooltip">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-microchip fa-4x mb-4 text-muted opacity-50"></i>
                <h4 class="mb-3">No hay dispositivos registrados</h4>
                <p class="mb-4 text-muted">Comienza agregando tu primer dispositivo inteligente al sistema.</p>
                <a asp-page="Create" class="btn btn-success btn-lg">
                    <i class="fas fa-plus me-2"></i>Agregar Primer Dispositivo
                </a>
            </div>
        }
    </div>
</div>

<!-- Botón flotante para crear -->
<a asp-page="Create" class="create-button" title="Agregar nuevo dispositivo">
    <i class="fas fa-plus"></i>
</a>