<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoMSD</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
    .hero-section {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 20px;
    color: white;
    padding: 3rem 2rem;
    margin-bottom: 2rem;
    position: relative;
    overflow: hidden;
    }

    .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 50%, rgba(255,255,255,0.1) 0%, transparent 50%);
    pointer-events: none;
    }

    .card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 15px 40px rgba(0,0,0,0.2) !important;
    }

    .btn-group .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .avatar {
    box-shadow: 0 4px 12px rgba(52, 152, 219, 0.3);
    }

    .badge {
    font-weight: 600;
    letter-spacing: 0.5px;
    }

    {
    flex-direction: column;
    }

    .btn-group .btn {
    border-radius: 8px !important;
    margin-bottom: 5px;
    }

    .d-flex.gap-2 {
    flex-direction: column;
    gap: 10px !important;
    }
    </style>

</head>
<body>
    <header>
        @if (ViewData["ShowNavbar"] == null || (bool)ViewData["ShowNavbar"])
        {
            <nav class="navbar navbar-expand-lg navbar-custom">
                <div class="container-fluid px-4">
                    <!-- Brand/Logo -->
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                        <i class="fas fa-home fa-lg text-primary me-2"></i>
                        <span class="fw-bold">ProyectoMSD</span>
                    </a>

                    <!-- Botón hamburguesa para móviles -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <!-- Menú principal horizontal -->
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link fw-semibold px-3" asp-area="" asp-page="/Index">
                                    <i class="fas fa-home me-1"></i>Inicio
                                </a>
                            </li>

                            <!-- Separador visual -->
                            <li class="nav-item">
                                <span class="navbar-text px-1 text-muted">|</span>
                            </li>

                            <!-- Elementos de Gestión en línea -->
                            <li class="nav-item">
                                <a class="nav-link fw-semibold px-3" asp-page="/Usuarios/Index">
                                    <i class="fas fa-users me-1 text-primary"></i>Usuarios
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link fw-semibold px-3" asp-page="/Propiedades/Index">
                                    <i class="fas fa-building me-1 text-success"></i>Propiedades
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link fw-semibold px-3" asp-page="/Espacios/Index">
                                    <i class="fas fa-map-marked-alt me-1 text-info"></i>Espacios
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link fw-semibold px-3" asp-page="/Dispositivos/Index">
                                    <i class="fas fa-mobile-alt me-1 text-warning"></i>Dispositivos
                                </a>
                            </li>

                            <!-- Separador visual -->
                            <li class="nav-item">
                                <span class="navbar-text px-1 text-muted">|</span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link fw-semibold px-3" asp-page="/Soportes/Index">
                                    <i class="fas fa-life-ring me-1 text-danger"></i>Soporte
                                </a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link fw-semibold px-3" asp-area="" asp-page="/Configuraciones/Index">
                                    <i class="fas fa-sliders-h me-1 text-dark"></i>Configuraciones
                                </a>
                            </li>



                            <li class="nav-item">
                                <a class="nav-link fw-semibold px-3" asp-area="" asp-page="/Privacy">
                                    <i class="fas fa-shield-alt me-1 text-dark"></i>Privacidad
                                </a>
                            </li>


                        </ul>

                        <!-- Controles simplificados -->
                        <div class="d-flex align-items-center gap-3">
                            <!-- Logout xd -->
                            <a href="/Logout" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-sign-out-alt me-1"></i>Salir
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="color:floralwhite;">
        <div class="container">
            <strong> &copy; 2025 - ProyectoMSD -</strong> <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
